# MLOps Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================
# PROJECT SETTINGS
# ============================================================
PROJECT_NAME="MLOps Platform"
VERSION="1.0.0"
ENVIRONMENT="development"  # Options: development, staging, production
DEBUG=true

# ============================================================
# DATASET CONFIGURATION
# ============================================================
DATASET_NAME="heart_disease"
DATASET_URL="https://archive.ics.uci.edu/ml/machine-learning-databases/heart-disease/processed.cleveland.data"
TEST_SIZE=0.2
VAL_SIZE=0.1
RANDOM_SEED=42

# ============================================================
# MLFLOW CONFIGURATION
# ============================================================
MLFLOW_TRACKING_URI="http://localhost:5000"
MLFLOW_BACKEND_STORE_URI="sqlite:///mlflow.db"
MLFLOW_ARTIFACT_ROOT="./mlruns"
MLFLOW_EXPERIMENT_NAME="heart_disease_classification"
# MLFLOW_REGISTRY_URI=""  # Optional: separate registry URI

# ============================================================
# DVC CONFIGURATION
# ============================================================
DVC_REMOTE_NAME="myremote"
DVC_REMOTE_URL="./dvc-storage"  # Or s3://bucket/path, gs://bucket/path, etc.

# For S3 remote (uncomment if using AWS S3)
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_DEFAULT_REGION="us-west-2"

# ============================================================
# MODEL TRAINING CONFIGURATION
# ============================================================
MODEL_SELECTION_METRIC="f1"  # Options: accuracy, f1_score, roc_auc, precision, recall
MODEL_MIN_THRESHOLD=0.75
ENABLE_CROSS_VALIDATION=true
CV_FOLDS=5

# ============================================================
# API CONFIGURATION
# ============================================================
API_HOST="0.0.0.0"
API_PORT=8000
API_KEY="change-me-in-production-use-strong-key"
API_RATE_LIMIT=100  # Requests per minute
API_WORKERS=4

# ============================================================
# STREAMLIT CONFIGURATION
# ============================================================
STREAMLIT_HOST="0.0.0.0"
STREAMLIT_PORT=8501

# ============================================================
# AUTONOMOUS AGENT CONFIGURATION
# ============================================================
AGENT_HOST="0.0.0.0"
AGENT_PORT=8001
AGENT_ENABLED=true
AGENT_AUTO_EXECUTE_SAFE=true
AGENT_REQUIRE_APPROVAL_THRESHOLD=0.7

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
# For development (SQLite)
DATABASE_URL="sqlite:///./audit.db"

# For production (PostgreSQL) - uncomment and configure
# DATABASE_URL="postgresql://user:password@localhost:5432/mlops"
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5

# ============================================================
# MONITORING CONFIGURATION
# ============================================================
DRIFT_DETECTION_ENABLED=true
DRIFT_THRESHOLD=0.5
DRIFT_CRITICAL_THRESHOLD=0.7
DRIFT_CHECK_INTERVAL=1000  # Check every N predictions
PERFORMANCE_DEGRADATION_THRESHOLD=0.1  # 10% degradation triggers alert

# ============================================================
# PROMETHEUS CONFIGURATION
# ============================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ============================================================
# EMAIL CONFIGURATION (SMTP)
# ============================================================
SMTP_ENABLED=false  # Set to true to enable email notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
SMTP_USE_TLS=true
NOTIFICATION_EMAIL="alerts@yourcompany.com"
NOTIFICATION_FROM="mlops-platform@yourcompany.com"

# For Gmail, create an app-specific password:
# https://support.google.com/accounts/answer/185833

# For SendGrid (recommended for production):
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT=587
# SMTP_USER="apikey"
# SMTP_PASSWORD="your-sendgrid-api-key"

# ============================================================
# SLACK CONFIGURATION
# ============================================================
SLACK_ENABLED=false  # Set to true to enable Slack notifications
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"
SLACK_CHANNEL="#mlops-alerts"

# Create a Slack webhook:
# https://api.slack.com/messaging/webhooks

# ============================================================
# REPORTING CONFIGURATION
# ============================================================
REPORTS_ENABLED=true
REPORT_GENERATION_ON_DEPLOY=true
REPORT_GENERATION_ON_DRIFT=true
WEEKLY_SUMMARY_ENABLED=true

# ============================================================
# LOGGING CONFIGURATION
# ============================================================
LOG_LEVEL="INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # Options: json, text
LOG_TO_FILE=true
LOG_ROTATION="1 day"
LOG_RETENTION="30 days"

# ============================================================
# SECURITY CONFIGURATION
# ============================================================
ENABLE_API_AUTH=true
WEBHOOK_SECRET="change-me-in-production-use-strong-secret"
CORS_ORIGINS=["*"]  # In production, specify allowed origins

# ============================================================
# RENDER DEPLOYMENT (for production)
# ============================================================
# These are automatically set by Render, but you can override
# RENDER=true
# PORT=10000
# PYTHON_VERSION=3.10

# ============================================================
# ADDITIONAL CONFIGURATION
# ============================================================
# Add any custom environment variables below
