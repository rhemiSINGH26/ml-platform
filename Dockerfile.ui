# Dockerfile for Streamlit UI
FROM python:3.10-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Install Python dependencies with timeout and retry settings
ENV PIP_DEFAULT_TIMEOUT=300
RUN pip install --no-cache-dir --retries 5 -r requirements.txt

# Copy application code
COPY config/ ./config/
COPY services/ui/ ./services/ui/
COPY monitoring/ ./monitoring/
COPY .env.example .env

# Create necessary directories
RUN mkdir -p data/raw data/processed models/production logs audit/reports

# Expose port
EXPOSE 8501

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8501/_stcore/health || exit 1

# Run Streamlit
CMD ["streamlit", "run", "services/ui/app.py", "--server.port=8501", "--server.address=0.0.0.0"]
